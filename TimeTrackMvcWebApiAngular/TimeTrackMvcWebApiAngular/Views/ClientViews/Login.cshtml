<script type="text/ng-template" id="login.html">
    <div class="row">
        <div class="col-md-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to continue to Time Tracking tool</h1>
            <div data-ng-hide="message == ''" class="alert alert-danger">
                {{message}}
            </div>
            <div class="account-wall">
                <form class="form-signin">
                    <input type="text" class="form-control" placeholder="Email" required autofocus data-ng-model="loginData.userName">
                    <input type="password" class="form-control" placeholder="Password" required data-ng-model="loginData.password">
                    <button class="btn btn-default btn-block" type="submit" data-ng-click="login()">
                        Sign in
                    </button>
                    <label class="checkbox pull-left">
                        <input type="checkbox" value="remember-me">
                        Remember me
                    </label>
                    <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                </form>
            </div>
            <a href="/#/signup" class="text-center new-account">Create an account </a>
        </div>
    </div>
</script>
